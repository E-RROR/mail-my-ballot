{
  "name": "@vbm/client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@tianhuil/simple-trpc": "^1.5.0",
    "muicss": "^0.10.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-signature-canvas": "^1.0.3",
    "styled-components": "^5.0.1",
    "unstated-next": "^1.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/muicss": "^0.9.1",
    "@types/node": "^12.6.9",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-signature-canvas": "^1.0.0",
    "@types/styled-components": "^5.0.1",
    "env-cmd": "^10.1.0",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "3.4.0",
    "serve": "^11.3.0",
    "ts-jest": "^24.3.0",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "env-cmd -f ./env/.env.development react-app-rewired start",
    "build:staging": "env-cmd -f ./env/.env.staging react-app-rewired build",
    "build:production": "env-cmd -f ./env/.env.production react-app-rewired build",
    "test": "env-cmd -f ./env/.env.test react-app-rewired test",
    "predeploy:staging": "yarn build:staging",
    "deploy:staging": "now ./build --local-config=./now.json --confirm && ./tag.sh staging",
    "predeploy:production": "yarn build:production",
    "deploy:production": "now --prod ./build  && ./tag.sh production",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
