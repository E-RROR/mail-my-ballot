{
  "name": "@vbm/client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "muicss": "^0.10.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-signature-canvas": "^1.0.3",
    "styled-components": "^5.0.1",
    "@tianhuil/simple-trpc": "^1.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/muicss": "^0.9.1",
    "@types/node": "^12.6.9",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-signature-canvas": "^1.0.0",
    "@types/styled-components": "^5.0.1",
    "dotenv-flow": "^3.1.0",
    "react-scripts": "3.4.0",
    "serve": "^11.3.0",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "NODE_ENV=development node -r ../../env/loader ./node_modules/.bin/react-scripts start",
    "build:staging": "NODE_ENV=staging  node -r ../../env/loader ./node_modules/.bin/react-scripts build",
    "build:production": "NODE_ENV=production  node -r ../../env/loader ./node_modules/.bin/react-scripts build",
    "test":  "NODE_ENV=test        node -r ../../env/loader ./node_modules/.bin/react-scripts test",
    "predeploy:staging": "yarn build:staging",
    "deploy:staging": "now ./build --local-config=./now.json --confirm",
    "predeploy:production": "yarn build:production",
    "deploy:production": "now --prod ./build",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
