{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.promise",
      "es2015.collection",
      "es2015.symbol.wellknown",
      "esnext.asynciterable",
      "es2017",
      "esnext",
    ],
    "outDir": "./dist/",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.proto.ts",
  ],
}
