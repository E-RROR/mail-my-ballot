{
  "name": "@vbm/server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "proto": "env-cmd -r ./env/.env.js -e development ts-node-dev --transpileOnly src/service/csv.proto.ts",
    "start": "env-cmd -r ./env/.env.js -e development ts-node-dev --respawn --transpileOnly src/index.ts",
    "build:staging": "env-cmd -r ./env/.env.js -e staging tsc",
    "postbuild:staging": "ln -sf ../../../src/service/zip/uszips.csv ./dist/service/zip/uszips.csv && mkdir -p ./dist/views/ && cp ./src/views/*.pug ./dist/views/.",
    "build:production": "env-cmd -r ./env/.env.js -e production tsc",
    "postbuild:production": "ln -sf ../../../src/service/zip/uszips.csv ./dist/service/zip/uszips.csv && mkdir -p ./dist/views/ && cp ./src/views/*.pug ./dist/views/.",
    "test": "env-cmd -r ./env/.env.js -e test jest \\.test\\.ts",
    "test:watch": "env-cmd -r ./env/.env.js -e test jest \\.test\\.ts --watchAll",
    "predeploy:staging": "yarn run build:staging && yarn appsubst:staging",
    "appsubst:staging": "env-cmd -r ./env/.env.js -e staging envsubst < app.tmpl.yaml > app.yaml",
    "deploy:staging": "gcloud app deploy --project vbm-test-dev && ./tag.sh server staging",
    "index:staging": "firebase --project vbm-test-dev deploy --only firestore:indexes",
    "deploy:prodroduction": "x && ./tag.sh server production",
    "e2e": "firebase emulators:exec --only firestore ./e2e.sh",
    "emulator": "firebase emulators:exec --only firestore"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/connect-flash": "^0.0.35",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.0",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^24.0.0",
    "@types/mailgun-js": "^0.22.4",
    "@types/marked": "^0.7.2",
    "@types/morgan": "^1.7.36",
    "@types/node": "^12.6.9",
    "@types/passport": "^1.0.3",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/supertest": "^2.0.8",
    "env-cmd": "^10.1.0",
    "jest": "^24.0.0",
    "nodemon": "^1.19.1",
    "react-test-renderer": "^16.13.0",
    "serve": "^11.3.0",
    "supertest": "^4.0.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "~3.7.2"
  },
  "dependencies": {
    "@firebase/testing": "^0.18.1",
    "@google-cloud/connect-firestore": "^1.0.6",
    "@tianhuil/simple-trpc": "^1.6.0",
    "body-parser": "^1.19.0",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "csv-parser": "^2.3.2",
    "csv-writer": "^1.6.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "firebase-admin": "^8.9.2",
    "mailgun-js": "^0.22.0",
    "marked": "^0.8.0",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "pug": "^2.0.4",
    "strip-indent": "^3.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|e2e))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
