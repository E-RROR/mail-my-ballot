<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

.container
  if state
    ul.nav.nav-tabs
      each availableState in availableStates
        li.nav-item
          if state === availableState
            a.nav-link(href=availableState + '-0').active= availableState
          else
            a.nav-link(href=availableState + '-0')= availableState

  .mt-4
    select.form-control(onchange="location = '" + state + "' + '-' + this.value")
      each val, idx in stateContacts
        if idx === index
          option(value=idx selected)= val
        else
          option(value=idx)= val
            
  .mt-4 !{letter}
