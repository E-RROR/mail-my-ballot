{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.20.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "client-gulp": "yarn workspace @vbm/client gulp",
    "common-gulp": "yarn workspace @vbm/common gulp",
    "server-gulp": "yarn workspace @vbm/server gulp",
    "clean": "mv node_modules /tmp/ && rm -rf /tmp/node_modules&",
    "clobber": "yarn clean && rm -f yarn.lock",
    "gulp": "lerna run gulp --",
    "test": "lerna run gulp -- test && yarn workspace @vbm/server gulp test:e2e",
    "build:staging": "lerna run gulp -- build --env staging",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
