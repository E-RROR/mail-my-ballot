{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.20.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start-client": "cd packages/client && yarn start",
    "start-server": "cd packages/server && yarn start",
    "clean": "mv node_modules /tmp/ && rm -rf /tmp/node_modules&",
    "clobber": "yarn clean && rm -f yarn.lock"
  }
}
