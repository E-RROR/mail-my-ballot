{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.20.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start-client": "yarn workspace @vbm/client start",
    "start-server": "yarn workspace @vbm/server gulp start",
    "serve-client": "serve -s packages/client/build",
    "clean": "mv node_modules /tmp/ && rm -rf /tmp/node_modules&",
    "clobber": "yarn clean && rm -f yarn.lock",
    "test-client": "yarn workspace @vbm/client test",
    "test-common": "yarn workspace @vbm/common test",
    "build:staging": "lerna run build:staging",
    "test": "lerna run test",
    "lint": "lerna run lint"
  }
}
