{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.20.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start-client": "yarn workspace @vbm/client gulp start",
    "start-server": "yarn workspace @vbm/server gulp start",
    "serve-client": "yarn workspace @vbm/client gulp serve",
    "clean": "mv node_modules /tmp/ && rm -rf /tmp/node_modules&",
    "clobber": "yarn clean && rm -f yarn.lock",
    "test-client": "yarn workspace @vbm/client test",
    "test-common": "yarn workspace @vbm/common test",
    "test-server": "yarn workspace @vbm/server test",
    "gulp": "lerna run gulp --",
    "test": "lerna run gulp -- test",
    "build:staging": "lerna run gulp -- build --env staging",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
